{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@actions/*": ["./src/actions/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@modals/*": ["./src/modals/*"],
      "@screens/*": ["./src/screens/*"],
      "@utils/*": ["./src/utils/*"],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
  ],
}
